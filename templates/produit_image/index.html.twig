{% extends 'base.html.twig' %}

{% block title %}ProduitImage index{% endblock %}

{% block body %}
    <h1>ProduitImage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit_image in produit_images %}
            <tr>
                <td>{{ produit_image.id }}</td>
                <td>{{ produit_image.nom }}</td>
                <td>{{ produit_image.url }}</td>
                <td>
                    <a href="{{ path('app_produit_image_show', {'id': produit_image.id}) }}">show</a>
                    <a href="{{ path('app_produit_image_edit', {'id': produit_image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_image_new') }}">Create new</a>
{% endblock %}
