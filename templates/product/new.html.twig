{% extends 'base.html.twig' %}

{% block title %}
Detail - {{ parent() }}
{% endblock %}

{% block body %}

<div class="bg-light py-5">
    <div class="container">
        {{form_start(form)}}
        <div class="m-3">
        {{form_label(form.titre, 'Titre du produit', {'label_attr': {'class': 'text-primary fw-bold'}})}}
        {{form_widget(form.titre)}}
        {{form_errors(form.titre)}}
        </div>

        <div class="m-3">
        {{form_label(form.description, 'Titre de la description', {'label_attr': {'class': 'text-primary fw-bold'}})}}
        {{form_widget(form.description)}}
        {{form_errors(form.description)}}
        </div>

        <div class="m-3">
        {{form_label(form.prix, 'Prix :', {'label_attr': {'class': 'text-primary fw-bold'}})}}
        {{form_widget(form.prix)}}
        {{form_errors(form.prix)}}
        </div>

        <div class="m-3">
        {{form_label(form.stock, 'Stock :', {'label_attr': {'class': 'text-primary fw-bold'}})}}
        {{form_widget(form.stock)}}
        {{form_errors(form.stock)}}
        </div>

        <div class="m-3">
        {{form_label(form.status, 'Status :', {'label_attr': {'class': 'text-primary fw-bold'}})}}
        {{form_widget(form.status)}}
        {{form_errors(form.status)}}
        </div>

        <div class="m-3">
        {{form_label(form.imageName, 'Lien de l\'image :', {'label_attr': {'class': 'text-primary fw-bold'}})}}
        {{form_widget(form.imageName)}}
        {{form_errors(form.imageName)}}
        </div>

        <div class="m-3">
        {{form_widget(form.acceptConditions)}}
        {{form_errors(form.acceptConditions)}}
        </div>



        <button type="submit" class="btn btn-primary mt-3">
            Ajouter
        </button>
        {{form_end(form)}}
    </div>
</div>

{% endblock %}