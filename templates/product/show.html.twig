{% extends 'base.html.twig' %}

{% block title %}
Detail - {{ parent() }}
{% endblock %}

{% block body %}

<h1>Détail du produit</h1>
<div class="card text-bg-dark text-center">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{product.imageName}}" class="card-img" alt="{{product.titre}}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Titre : {{ product.titre }}</h5>
                <p class="card-text">Description : {{ product.description }}</p>
                <p class="card-text">{{ product.prix }}€</p>
                <p class="card-text">Stock : {{ product.stock }}</p>

                <a href="{{ path('app_product') }}" class="btn btn-primary">Retour au catalogue</a>
                <button class="btn btn-primary">Modifier</button>
                <button class="btn btn-primary">Supprimer</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}