{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>

    <ul>
        {% for product in products %}
            <li>
                <a href="{{ path('app_product_show', {'id': product.id}) }}">{{ product.titre }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
